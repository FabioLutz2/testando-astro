---
import "@styles/global.css";

import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Sidebar from "@components/Sidebar.astro";
import Footer from "@components/Footer.astro";
import TableOfContent from "@components/TableOfContent.astro";

const { title, description, headings } = Astro.props;
---

<!doctype html>
<html lang="en">
    <Head title=`${title} | Site` />
    <body>
        <div>
            <Header />
            <div class="mx-auto grid grid-cols-[300px_1fr_300px] gap-5">
                <aside
                class="prose prose-a:text-blue-600 prose-a:no-underline prose-a:hover:underline">
                    <Sidebar />
                </aside>
                <main class="px-5 pb-20 min-h-screen">
                    <h1 class="text-5xl pt-15 font-bold">{title}</h1>
                    <p class="text-3xl py-10">{description}</p>
                    <hr class="p-5" />
                    <article
                    class="prose prose-a:text-blue-600 prose-a:no-underline prose-a:hover:underline">
                        <slot />
                    </article>
                </main>
                <aside>
                    <TableOfContent items={headings} />
                </aside>
            </div>
            <Footer />
        </div>
    </body>
</html>
